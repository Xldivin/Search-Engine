<section class='analytics-section'>
  <h1 class='analytics-section__heading'> Analytics: popular searched articles </h1>
  <% if(@search_querries.length === 0)%>
    <p class='analytics-section__text'>No searches made yet</p>

    <%else%>

  <table class='table'>
  <tr class='table__row table__row--heading'>
    <th class='table__header'>Query</th>
    <th class='table__header'>number of searches</th>
    <th class='table__header'>articles</th>
  </tr>
  <% @search_querries.each_with_index do |querry, index| %>
<tr class='table__row'>  
  <td class='table__data'> <%= querry[0]  %> </td>
  <td class='table__data'> <%= querry[1] %> </td>
  <td class='table__data'><%= querry[2]  %> </td>
</tr>
  <% end %>
</table>
  <%end%>
</section>

